{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}